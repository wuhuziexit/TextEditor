<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/function_menu"
            android:background="@color/烟白色"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center">
        <Button
                android:id="@+id/select_file"
                android:text="@string/选择文件"
                style="@style/text_button"/>
        <Button
                android:text="@string/app_name"
                style="@style/text_button" android:layout_width="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp">
        <LinearLayout
                style="@style/p_layout_button">
            <Button
                    style="@style/p_button"
                    android:text="编辑"
                    android:id="@+id/b_1"/>
            <Button
                    style="@style/p_button"
                    android:text="合并"
                    android:id="@+id/b_2"/>
            <Button
                    style="@style/p_button"
                    android:text="保存"
                    android:id="@+id/b_3"/>
            <Button
                    style="@style/p_button"
                    android:text="重置"
                    android:id="@+id/b_4"/>
        </LinearLayout>
        <LinearLayout
                style="@style/p_layout_button">
            <Button
                    style="@style/p_button"
                    android:text="信息"
                    android:id="@+id/b_5"/>
            <Button
                    style="@style/p_button"
                    android:text="打开"
                    android:id="@+id/b_6"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <EditText
                        android:id="@+id/editText"
                        android:background="@color/灰色"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>